{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:arrow",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "handi_arrow": {
        "minecraft:projectile": {
          "on_hit": {
            "impact_damage": {
              "damage": 10,
              "knockback": true,
              "semi_random_diff_damage": true,
              "destroy_on_hit": true,
              "max_critical_damage": 20,
              "min_critical_damage": 20,
              "power_multiplier": 1
            },
            "stick_in_ground": {
              "shake_time" : 0.35
            },
            "arrow_effect": {
            },
            "definition_event": {
              "event_trigger":{
                "event":"hit",
                "target":"self"
              }
            }
          },
          "hit_sound": "bow.hit",
          "power": 5.0,
          "gravity": 0.05,
          "uncertainty_base": 1,
          "uncertainty_multiplier": 0,
          "anchor": 1,
          "should_bounce": true,
          "offset": [ 0, -0.1, 0 ]
        }
      }
    },

    "components": {
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.25
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "damage": 20,
            "knockback": true,
            "semi_random_diff_damage": false,
            "destroy_on_hit": true
          },
          "stick_in_ground": {
            "shake_time" : 0.35
          },
          "arrow_effect": {
          },
          "definition_event":{
            "event_trigger":{
              "event":"hit",
              "target":"self"
            }
          }
        },
        "hit_sound": "bow.hit",
        "power": 5.0,
        "gravity": 0.05,
        "uncertainty_base": 0,
        "uncertainty_multiplier": 0,
        "anchor": 1,
        "should_bounce": true,
        "offset": [ 0, -0.1, 0 ]
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "filters": {"test": "has_tag", "subject": "other", "value": "handi1"},
            "add": {
              "component_groups" : [ "handi_arrow" ]
            }
          },
          {
            "filters": {"test": "is_family", "subject": "other", "value": "player"},
            "run_command":{
              "command":[
                "tag @s add shot"
              ],
              "target":"other"
            }
          }
        ]
      },
      "hit":{
        "run_command":{
          "command":[
            "tag @s add hit"
          ],
          "target":"self"
        }
      }
    }

  }
}